&lt;a id="rest_code_c93cd7ce76204d0c996c44de23e6f255-20" name="rest_code_c93cd7ce76204d0c996c44de23e6f255-20" href="https://nicoguaro.github.io/es/posts/marking-tetrahedron/#rest_code_c93cd7ce76204d0c996c44de23e6f255-20"&gt;&lt;/a&gt;&lt;span class="k"&gt;def&lt;/span&gt; &lt;span class="nf"&gt;comp_probs&lt;/span&gt;&lt;span class="p"&gt;(&lt;/span&gt;&lt;span class="n"&gt;N_min&lt;/span&gt;&lt;span class="o"&gt;=&lt;/span&gt;&lt;span class="mi"&gt;1&lt;/span&gt;&lt;span class="p"&gt;,&lt;/span&gt; &lt;span class="n"&gt;N_max&lt;/span&gt;&lt;span class="o"&gt;=&lt;/span&gt;&lt;span class="mi"&gt;5&lt;/span&gt;&lt;span class="p"&gt;,&lt;/span&gt; &lt;span class="n"&gt;ntrials&lt;/span&gt;&lt;span class="o"&gt;=&lt;/span&gt;&lt;span class="mi"&gt;100&lt;/span&gt;&lt;span class="p"&gt;):&lt;/span&gt;
&lt;a id="rest_code_c93cd7ce76204d0c996c44de23e6f255-21" name="rest_code_c93cd7ce76204d0c996c44de23e6f255-21" href="https://nicoguaro.github.io/es/posts/marking-tetrahedron/#rest_code_c93cd7ce76204d0c996c44de23e6f255-21"&gt;&lt;/a&gt;    &lt;span class="n"&gt;prob&lt;/span&gt; &lt;span class="o"&gt;=&lt;/span&gt; &lt;span class="p"&gt;[]&lt;/span&gt;
